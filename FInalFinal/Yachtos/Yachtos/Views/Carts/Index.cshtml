@model IEnumerable<Yachtos.Models.Cart>

@{
    ViewData["Title"] = "Index";
    double p = 0;
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Pavadinimas
            </th>
            <th>Kaina</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.getItemInfo(item.ItemsId).Item)
            </td>
            <td>@Html.DisplayFor(modelItem => item.getItemPrice(item.ItemsId).price)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CartId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CartId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CartId">Delete</a>
            </td>
        </tr>
   p += item.getItemPrice(item.ItemsId).price;
}
    </tbody>
    <tfoot>
        <tr>Viso kaina: @p</tr>
        <tr>                Uzsisakyti</tr>
    
    </tfoot>
</table>
