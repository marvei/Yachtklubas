@model IEnumerable<Yachtos.Models.Favorites>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Pavadinimas
            </th>
            <th>Tipas</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.getFavoriteById(item.ItemsId).Item)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.getFavoriteById(item.ItemsId).description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FavoritesId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FavoritesId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FavoritesId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
